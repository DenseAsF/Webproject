{% extends 'adminbase.html.twig' %}

{% block title %}Edit Service{% endblock %}

{% block body %}
<div class="max-w-7xl mx-auto mt-10 p-6 bg-white shadow-md rounded-lg">
    <div class="flex justify-between items-center mb-6 helvetica-condensed">
        <h1 class="text-2xl font-bold">Edit Service #{{ service.id }}</h1>
        <div class="flex gap-2">
            <a href="{{ path('service_show', {'id': service.id}) }}" data-turbo="false" class="helvetica-condensed bg-gray-500 text-white px-4 py-2 rounded-md hover:bg-gray-600 transition">
                View
            </a>
            <a href="{{ path('service_index') }}" data-turbo="false" class="helvetica-condensed bg-gray-500 text-white px-4 py-2 rounded-md hover:bg-gray-600 transition">
                Back to List
            </a>
        </div>
    </div>

    <div class="helvetica-condensed">
        {{ form_start(form, {'attr': {'class': 'space-y-6', 'data-turbo': 'false'}}) }}
            <div class="flex flex-col sm:flex-row gap-4">
                <div class="flex-1">
                    {{ form_label(form.name, 'Service Name', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                    {{ form_widget(form.name, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500'}}) }}
                    {% if form.name.vars.errors|length > 0 %}
                        <div class="text-red-600 text-sm mt-1 flex items-center">
                            <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
                            </svg>
                            {{ form_errors(form.name) }}
                        </div>
                    {% endif %}
                </div>
                
                <div class="flex-1 sm:max-w-xs">
                    {{ form_label(form.price, 'Price', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                    <div class="relative">
                        {{ form_widget(form.price, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500'}}) }}
                    </div>
                    {% if form.price.vars.errors|length > 0 %}
                        <div class="text-red-600 text-sm mt-1 flex items-center">
                            <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
                            </svg>
                            {{ form_errors(form.price) }}
                        </div>
                    {% endif %}
                </div>
            </div>

            <div class="flex gap-4 pt-4">
                <button type="submit" class="helvetica-condensed bg-[rgb(29,53,153)] text-white px-6 py-2 rounded-md hover:bg-[rgb(242,182,34)] transition">
                    Update Service
                </button>
                <a href="{{ path('service_index') }}" data-turbo="false" class="helvetica-condensed bg-gray-500 text-white px-6 py-2 rounded-md hover:bg-gray-600 transition">
                    Cancel
                </a>
            </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
