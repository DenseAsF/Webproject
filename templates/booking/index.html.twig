{% extends 'adminbase.html.twig' %}

{% block title %}Bookings{% endblock %}

{% block body %}
<div class="max-w-7xl mx-auto mt-10 p-6 bg-white shadow-md rounded-lg">
    <div class="flex justify-between items-center mb-6 helvetica-condensed">
        <h1 class="text-2xl font-bold">Current Bookings</h1>
        <a href="{{ path('booking_new') }}" data-turbo="false" class="helvetica-condensed bg-[rgb(29,53,153)] text-white px-4 py-2 rounded-md hover:bg-[rgb(242,182,34)] transition">
            New Booking
        </a>
    </div>

    <div class="mb-6 p-4 bg-gray-50 rounded-lg helvetica-condensed">
        <form method="get" action="{{ path('booking_index') }}" class="grid grid-cols-1 lg:grid-cols-6 gap-3 items-end">
            
       
            <div class="lg:col-span-2 flex-1 min-w-0">
                <label for="search" class="block text-sm font-medium text-gray-700 mb-1">Booking ID</label>
                <input type="text" 
                       id="search" 
                       name="search" 
                       value="{{ app.request.query.get('search') }}" 
                       placeholder="Search ID..."
                       class="w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500 text-sm">
            </div>

         
            <div class="flex-1 min-w-0">
                <label for="status" class="block text-sm font-medium text-gray-700 mb-1">Status</label>
                <select id="status" 
                        name="status" 
                        class="w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500 text-sm">
                    <option value="">All Status</option>
                    <option value="Booked" {{ app.request.query.get('status') == 'Booked' ? 'selected' : '' }}>Booked</option>
                    <option value="Checked In" {{ app.request.query.get('status') == 'Checked In' ? 'selected' : '' }}>Checked In</option>
                </select>
            </div>
 
            <div class="flex-1 min-w-0">
                <label for="startDate" class="block text-sm font-medium text-gray-700 mb-1">From</label>
                <input type="date" 
                       id="startDate" 
                       name="startDate" 
                       value="{{ app.request.query.get('startDate') }}" 
                       class="w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500 text-sm">
            </div class="flex-1 min-w-0">

         
            <div>
                <label for="endDate" class="block text-sm font-medium text-gray-700 mb-1">To</label>
                <input type="date" 
                       id="endDate" 
                       name="endDate" 
                       value="{{ app.request.query.get('endDate') }}" 
                       class="w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500 text-sm">
            </div>

            <div class="flex gap-2 lg:col-span-1 flex-1 min-w-0">
                <button type="submit" 
                        class="flex-1 bg-[rgb(29,53,153)] text-white px-3 py-2 rounded-md hover:bg-[rgb(242,182,34)] transition text-sm whitespace-nowrap">
                    Apply
                </button>
                <a href="{{ path('booking_index') }}" 
                   class="flex-1 bg-gray-500 text-white rounded-md px-3 py-2 hover:bg-gray-600 transition text-sm whitespace-nowrap text-center flex items-center justify-center">
                    Clear
                </a>
            </div>

        </form>



    <div class="mb-4 helvetica-condensed mt-5">
        <p class="text-sm text-gray-600">
            Showing {{ bookings|length }} booking(s)
            {% if app.request.query.get('status') or app.request.query.get('customer') or app.request.query.get('search') or app.request.query.get('startDate') or app.request.query.get('endDate') %}
                (filtered)
            {% endif %}
        </p>
    </div>


    <div class="helvetica-condensed overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">ID</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Customer</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Room</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Check In</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Check Out</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                {% for booking in bookings %}
                    <tr class="helvetica-condensed hover:bg-gray-50">
                        <td class="px-6 py-4 whitespace-nowrap font-medium">{{ booking.id }}</td>
                        <td class="px-6 py-4 whitespace-nowrap">{{ booking.user.name }}</td>
                        <td class="px-6 py-4 whitespace-nowrap">{{ booking.room.roomNumber }}</td>
                        <td class="px-6 py-4 whitespace-nowrap">{{ booking.checkInDate|date('Y-m-d') }}</td>
                        <td class="px-6 py-4 whitespace-nowrap">{{ booking.checkOutDate|date('Y-m-d') }}</td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <span class="inline-flex items-center rounded-full font-medium 
                                {% if booking.status == 'Booked' %} text-yellow-800
                                {% elseif booking.status == 'Checked In' %} text-green-800
                                {% else %} text-gray-800{% endif %}">
                                {{ booking.status }}
                            </span>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap space-x-4 flex items-center">
                            <a href="{{ path('booking_edit', {'id': booking.id}) }}" data-turbo="false" class="text-green-600 hover:text-green-900 hover:underline">Edit</a>

                            <form action="{{ path('booking_checkin', {'id': booking.id}) }}" method="post" class="inline">
                                <input type="hidden" name="_token" value="{{ csrf_token('checkin' ~ booking.id) }}">
                                {% if booking.status == 'Booked' %}
                                    <button type="submit" class="text-yellow-600 hover:text-yellow-900 hover:underline">Check In</button>
                                {% endif %}
                            </form>

                            <form action="{{ path('booking_checkout', {'id': booking.id}) }}" method="post" class="inline">
                                <input type="hidden" name="_token" value="{{ csrf_token('checkout' ~ booking.id) }}">
                                <button type="submit" class="text-blue-600 hover:text-blue-900 hover:underline">Checkout</button>
                            </form>


    <a href="{{ path('booking_show', {'id': booking.id}) }}" class="text-blue-600 hover:text-blue-900 hover:underline">
       Show 
    </a>


                            <form action="{{ path('booking_delete', {'id': booking.id}) }}" method="post" class="inline" onsubmit="return confirm('Are you sure you want to delete this booking?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ booking.id) }}">
                                <button type="submit" class="text-red-600 hover:text-red-900 hover:underline">Delete</button>
                            </form>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="7" class="helvetica-condensed px-6 py-4 text-center text-red-600">
                            {% if app.request.query.get('status') or app.request.query.get('customer') or app.request.query.get('search') or app.request.query.get('startDate') or app.request.query.get('endDate') %}
                                No bookings found matching your filters.
                            {% else %}
                                No bookings found. <a href="{{ path('booking_new') }}" data-turbo="false" class="text-blue-600 hover:underline">Create the first one</a>.
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}