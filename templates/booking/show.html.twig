{% extends 'adminbase.html.twig' %}

{% block title %}Booking #{{ booking.id }} - Hotel Diongco{% endblock %}

{% block body %}
<div class="max-w-4xl mx-auto mt-10 p-6 bg-white shadow-lg rounded-lg">
    <div class="flex justify-between items-center mb-8 helvetica-condensed">
        <h1 class="text-3xl font-bold">Booking Details</h1>
        <div class="flex gap-3">
            <a href="{{ path('booking_edit', {'id': booking.id}) }}" 
               class="bg-green-600 text-white px-4 py-2 rounded-md hover:bg-green-700 transition">
                Edit
            </a>
            <a href="{{ path('booking_index') }}" 
               class="bg-gray-500 text-white px-4 py-2 rounded-md hover:bg-gray-600 transition">
                Back to List
            </a>
        </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
      
        <div class="space-y-6">
            <div class="bg-gray-50 p-6 rounded-lg helvetica-condensed">
                <h2 class="text-xl font-semibold mb-4 text-[rgb(29,53,153)] helvetica-condensed">Booking Information</h2>
                <div class="space-y-3 helvetica-condensed">
                    <div class="flex justify-between border-b pb-2">
                        <span class="font-medium text-gray-600 helvetica-condensed">Booking ID:</span>
                        <span class="font-semibold">#{{ booking.id }}</span>
                    </div>
                    <div class="flex justify-between border-b pb-2 helvetica-condensed">
                        <span class="font-medium text-gray-600">Status:</span>
                        <span class="font-medium {% if booking.status == 'Booked' %}text-yellow-600{% elseif booking.status == 'Checked In' %}text-green-600{% else %}text-gray-600{% endif %}">
                            {{ booking.status }}
                        </span>
                    </div>
                    <div class="flex justify-between border-b pb-2 helvetica-condensed">
                        <span class="font-medium text-gray-600">Check-in Date:</span>
                        <span class="font-medium">{{ booking.checkInDate|date('F j, Y') }}</span>
                    </div>
                    <div class="flex justify-between border-b pb-2 helvetica-condensed">
                        <span class="font-medium text-gray-600">Check-out Date:</span>
                        <span class="font-medium">{{ booking.checkOutDate|date('F j, Y') }}</span>
                    </div>
                    <div class="flex justify-between border-b pb-2 helvetica-condensed">
                        <span class="font-medium text-gray-600">Total Price:</span>
                        <span class="font-medium text-lg text-[rgb(29,53,153)]">₱{{ booking.totalPrice|number_format(2) }}</span>
                    </div>
                </div>
            </div>

       
            <div class="bg-gray-50 p-6 rounded-lg">
                <h2 class="text-xl font-semibold mb-4 text-[rgb(29,53,153)] helvetica-condensed">Room Information</h2>
                <div class="space-y-3">
                    <div class="flex justify-between border-b pb-2 helvetica-condensed">
                        <span class="font-medium text-gray-600">Room Number:</span>
                        <span class="font-smedium">{{ booking.room.roomNumber }}</span>
                    </div>
                    <div class="flex justify-between border-b pb-2 helvetica-condensed">
                        <span class="font-medium text-gray-600">Room Type:</span>
                        <span class="font-medium">{{ booking.room.roomType.name }}</span>
                    </div>
                    <div class="flex justify-between border-b pb-2 helvetica-condensed">
                        <span class="font-medium text-gray-600">Room Price:</span>
                        <span class="font-medium">₱{{ booking.room.price|number_format(2) }}</span>
                    </div>
                </div>
            </div>
        </div>


        <div class="space-y-6">
      
            <div class="bg-gray-50 p-6 rounded-lg">
                <h2 class="text-xl font-semibold mb-4 text-[rgb(29,53,153)] helvetica-condensed">Customer Information</h2>
                <div class="space-y-3">
                    <div class="flex justify-between border-b pb-2 helvetica-condensed">
                        <span class="font-medium text-gray-600">Name:</span>
                        <span class="font-medium">{{ booking.customer.name }}</span>
                    </div>
                    <div class="flex justify-between border-b pb-2 helvetica-condensed">
                        <span class="font-medium text-gray-600">Account Number:</span>
                        <span class="font-medium">{{ booking.customer.accountNumber }}</span>
                    </div>
                
            <div class="bg-gray-50 p-6 rounded-lg helvetica-condensed">
                <h2 class="text-xl font-semibold mb-4 text-[rgb(29,53,153)] helvetica-condensed">Services</h2>
                {% if booking.bookingServices|length > 0 %}
                    <div class="space-y-2">
                        {% for bookingService in booking.bookingServices %}
                            <div class="flex justify-between border-b pb-2 helvetica-condensed">
                                <span class="font-medium text-gray-600">{{ bookingService.service.name }}:</span>
                                <span class="font-medium">₱{{ bookingService.service.price|number_format(2) }}</span>
                            </div>
                        {% endfor %}
                    </div>
                {% else %}
                    <p class="text-gray-500 text-center py-4 helvetica-condensed">No additional services selected</p>
                {% endif %}
            </div>

           
            <div class="bg-gray-50 p-6 rounded-lg">
                <h2 class="text-xl font-semibold mb-4 text-[rgb(29,53,153)] helvetica-condensed">Actions</h2>
                <div class="flex flex-col gap-3">
                    {% if booking.status == 'Booked' %}
                        <form action="{{ path('booking_checkin', {'id': booking.id}) }}" method="post" class="w-full">
                            <input type="hidden" name="_token" value="{{ csrf_token('checkin' ~ booking.id) }}">
                            <button type="submit" class="w-full bg-yellow-600 text-white py-2 rounded-md hover:bg-yellow-700 transition">
                                Check In
                            </button>
                        </form>
                    {% endif %}

                    <form action="{{ path('booking_checkout', {'id': booking.id}) }}" method="post" class="w-full">
                        <input type="hidden" name="_token" value="{{ csrf_token('checkout' ~ booking.id) }}">
                        <button type="submit" class="w-full bg-blue-600 text-white py-2 rounded-md hover:bg-blue-700 transition">
                            Checkout
                        </button>
                    </form>

                    <form action="{{ path('booking_delete', {'id': booking.id}) }}" method="post" class="w-full" 
                          onsubmit="return confirm('Are you sure you want to delete this booking?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ booking.id) }}">
                        <button type="submit" class="w-full bg-red-600 text-white py-2 rounded-md hover:bg-red-700 transition">
                            Delete Booking
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}