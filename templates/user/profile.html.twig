{% extends 'adminbase.html.twig' %}

{% block title %}My Profile{% endblock %}

{% block body %}
<div class="max-w-5xl mx-auto mt-10 p-6 bg-white shadow-md rounded-lg helvetica-condensed">
    <div class="flex flex-col md:flex-row md:items-center md:justify-between mb-8 gap-4">
        <div>
            <h1 class="text-2xl font-bold">My Profile</h1>
            <p class="text-sm text-gray-600 mt-1">View and manage your account information.</p>
        </div>
        <div class="w-full md:w-auto flex md:justify-end gap-2">
            <a href="{{ path('user_profile_edit') }}"
               class="inline-flex items-center px-4 py-2 rounded-md bg-[rgb(29,53,153)] text-white text-sm hover:bg-[rgb(242,182,34)] transition">
                Edit Profile
            </a>
            
            <a href="{{ path('app_logout') }}"
               data-turbo="false"
               class="inline-flex items-center px-4 py-2 rounded-md bg-red-600 text-white text-sm hover:bg-red-700 transition">
                Logout
            </a>
        </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="space-y-4">
            <div class="bg-gray-50 rounded-xl p-4">
                <p class="text-xs font-semibold text-gray-500 uppercase tracking-wide">Username</p>
                <p class="mt-1 text-lg font-semibold text-gray-900">{{ user.username }}</p>
            </div>

            <div class="bg-gray-50 rounded-xl p-4">
                <p class="text-xs font-semibold text-gray-500 uppercase tracking-wide">Full Name</p>
                <p class="mt-1 text-lg font-semibold text-gray-900">{{ user.name }}</p>
            </div>

            <div class="bg-gray-50 rounded-xl p-4">
                <p class="text-xs font-semibold text-gray-500 uppercase tracking-wide">Email</p>
                <p class="mt-1 text-lg font-semibold text-gray-900 break-all">{{ user.email }}</p>
            </div>

            <div class="bg-gray-50 rounded-xl p-4">
                <p class="text-xs font-semibold text-gray-500 uppercase tracking-wide">Phone</p>
                <p class="mt-1 text-lg font-semibold text-gray-900">{{ user.phone }}</p>
            </div>
        </div>

        <div class="space-y-4">
            <div class="bg-gray-50 rounded-xl p-4">
                <p class="text-xs font-semibold text-gray-500 uppercase tracking-wide">Account Number</p>
                <p class="mt-1 text-lg font-semibold text-gray-900">{{ user.accountNumber }}</p>
            </div>

            <div class="bg-gray-50 rounded-xl p-4">
                <p class="text-xs font-semibold text-gray-500 uppercase tracking-wide">Role</p>
                <p class="mt-1 text-lg font-semibold text-gray-900">
                    {% if 'ROLE_ADMIN' in user.roles %}
                        ADMIN
                    {% elseif 'ROLE_STAFF' in user.roles %}
                        STAFF
                    {% else %}
                        USER
                    {% endif %}
                </p>
            </div>

            <div class="bg-gray-50 rounded-xl p-4">
                <p class="text-xs font-semibold text-gray-500 uppercase tracking-wide">Member Since</p>
                <p class="mt-1 text-lg font-semibold text-gray-900">{{ user.createdAt|date('F j, Y') }}</p>
                <p class="text-xs text-gray-500">{{ user.createdAt|date('g:i A') }}</p>
            </div>
        </div>
    </div>
</div>
{% endblock %}
