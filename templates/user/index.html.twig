{% extends 'adminbase.html.twig' %}

{% block title %}Users{% endblock %}

{% block body %}
<div class="max-w-7xl mx-auto mt-10 p-6 bg-white shadow-md rounded-lg">
    <div class="flex justify-between items-center mb-6 helvetica-condensed">
        <h1 class="text-2xl font-bold">Users</h1>
        <a href="{{ path('user_new') }}" class="helvetica-condensed bg-[rgb(29,53,153)] text-white px-4 py-2 rounded-md hover:bg-[rgb(242,182,34)] transition">
            Create User
        </a>
    </div>

    <div class="mb-6 p-4 bg-gray-50 rounded-lg helvetica-condensed">
        <form method="get" action="{{ path('user_index') }}" class="grid grid-cols-1 lg:grid-cols-6 gap-3 items-end">
            
            <div class="lg:col-span-2 flex-1 min-w-0">
                <label for="search" class="block text-sm font-medium text-gray-700 mb-1">Username</label>
                <input type="text" 
                       id="search" 
                       name="search" 
                       value="{{ app.request.query.get('search') }}" 
                       placeholder="Search username..."
                       class="w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500 text-sm">
            </div>

            <div class="flex-1 min-w-0">
                <label for="role" class="block text-sm font-medium text-gray-700 mb-1">Role</label>
                <select id="role" 
                        name="role" 
                        class="w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500 text-sm">
                    <option value="">All Roles</option>
                    <option value="ROLE_USER" {{ app.request.query.get('role') == 'ROLE_USER' ? 'selected' : '' }}>User</option>
                    <option value="ROLE_STAFF" {{ app.request.query.get('role') == 'ROLE_STAFF' ? 'selected' : '' }}>Staff</option>
                    <option value="ROLE_ADMIN" {{ app.request.query.get('role') == 'ROLE_ADMIN' ? 'selected' : '' }}>Admin</option>
                </select>
            </div>

            <div class="flex gap-2 lg:col-span-2 flex-1 min-w-0">
                <button type="submit" 
                        class="flex-1 bg-[rgb(29,53,153)] text-white px-3 py-2 rounded-md hover:bg-[rgb(242,182,34)] transition text-sm whitespace-nowrap">
                    Apply
                </button>
                <a href="{{ path('user_index') }}" 
                   class="flex-1 bg-gray-500 text-white rounded-md px-3 py-2 hover:bg-gray-600 transition text-sm whitespace-nowrap text-center flex items-center justify-center">
                    Clear
                </a>
            </div>

        </form>
    </div>

    <div class="mb-4 helvetica-condensed mt-5">
        <p class="text-sm text-gray-600">
            Showing {{ users|length }} user(s)
            {% if app.request.query.get('search') or app.request.query.get('role') %}
                (filtered)
            {% endif %}
        </p>
    </div>

    <div class="helvetica-condensed overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">ID</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Username</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Role</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Email</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Phone</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Created</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                {% for user in users %}
                    <tr class="helvetica-condensed hover:bg-gray-50">
                        <td class="px-6 py-4 whitespace-nowrap font-medium">{{ user.id }}</td>
                        <td class="px-6 py-4 whitespace-nowrap">{{ user.username }}</td>
                        <td class="px-6 py-4 whitespace-nowrap">{{ user.name }}</td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            {% if 'ROLE_ADMIN' in user.roles %}
                                <span class="font-medium text-red-800">Admin</span>
                            {% elseif 'ROLE_STAFF' in user.roles %}
                                <span class="font-medium text-blue-800">Staff</span>
                            {% else %}
                                <span class="font-medium text-green-800">User</span>
                            {% endif %}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">{{ user.email }}</td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            {% if user.phone|length == 11 %}
                                {{ user.phone|slice(0, 4) }}-{{ user.phone|slice(4, 3) }}-{{ user.phone|slice(7, 4) }}
                            {% else %}
                                {{ user.phone }}
                            {% endif %}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                            {{ user.createdAt|date('Y-m-d H:i') }}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            {% if user.enabled %}
                                <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-semibold bg-green-100 text-green-800">Enabled</span>
                            {% else %}
                                <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-semibold bg-red-100 text-red-800">Disabled</span>
                            {% endif %}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap space-x-4 flex items-center">
                            <a href="{{ path('user_show', {'id': user.id}) }}" class="text-blue-600 hover:text-blue-900 hover:underline">
                                Show
                            </a>
                            <a href="{{ path('user_edit', {'id': user.id}) }}" class="text-green-600 hover:text-green-900 hover:underline">
                                Edit
                            </a>
                            {% if user.enabled %}
                                <form action="{{ path('user_disable', {'id': user.id}) }}" method="post" class="inline" onsubmit="return confirm('Disable this account?');">
                                    <button type="submit" class="text-red-600 hover:text-red-900 hover:underline">Disable</button>
                                </form>
                            {% else %}
                                <form action="{{ path('user_enable', {'id': user.id}) }}" method="post" class="inline">
                                    <button type="submit" class="text-yellow-600 hover:text-yellow-900 hover:underline">Enable</button>
                                </form>
                            {% endif %}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="8" class="helvetica-condensed px-6 py-4 text-center text-red-600">
                            {% if app.request.query.get('search') or app.request.query.get('role') %}
                                No users found matching your filters.
                            {% else %}
                                No users found. <a href="{{ path('user_new') }}" class="text-blue-600 hover:underline">Create the first one</a>.
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}