{% extends 'adminbase.html.twig' %}

{% block title %}User Details{% endblock %}

{% block body %}
<div class="min-h-screen bg-gradient-to-b from-gray-50 to-white py-10 px-4">
    <div class="max-w-4xl mx-auto">
        <!-- Header Section -->
        <div class="mb-10 text-center">
            <div class="relative inline-flex items-center justify-center w-20 h-20 mb-6">
                {% set isAdmin = 'ROLE_ADMIN' in user.roles %}
                <div class="absolute inset-0 {% if isAdmin %}bg-gradient-to-r from-red-500 to-pink-600{% else %}bg-gradient-to-r from-blue-500 to-indigo-600{% endif %} rounded-2xl shadow-xl transform rotate-6"></div>
                <div class="relative {% if isAdmin %}bg-gradient-to-r from-red-500 to-pink-600{% else %}bg-gradient-to-r from-blue-500 to-indigo-600{% endif %} rounded-2xl w-full h-full flex items-center justify-center shadow-lg">
                    <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                    </svg>
                </div>
            </div>
            <h1 class="text-4xl font-bold text-gray-900 mb-3">{{ user.username }}</h1>
            
            <!-- Simple Role Display -->
            <div class="inline-flex items-center px-6 py-3 {% if isAdmin %}bg-gradient-to-r from-red-50 to-pink-50 border border-red-200{% else %}bg-gradient-to-r from-blue-50 to-indigo-50 border border-blue-200{% endif %} rounded-full mb-4">
                <div class="w-3 h-3 {% if isAdmin %}bg-red-500{% else %}bg-blue-500{% endif %} rounded-full mr-3 animate-pulse"></div>
                <span class="text-lg font-bold {% if isAdmin %}text-red-800{% else %}text-blue-800{% endif %}">
                    {% if isAdmin %}Administrator{% else %}Regular User{% endif %}
                </span>
                <span class="mx-3 {% if isAdmin %}text-red-400{% else %}text-blue-400{% endif %}">â€¢</span>
                <span class="text-sm {% if isAdmin %}text-red-600{% else %}text-blue-600{% endif %}">ID: {{ user.id }}</span>
            </div>
            
            <!-- Account Number -->
            <div class="text-gray-600 text-sm">
                Account: <span class="font-semibold">{{ user.accountNumber }}</span>
            </div>
        </div>

        <!-- Main Content Grid -->
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <!-- Left Column - User Profile Card -->
            <div class="lg:col-span-2">
                <div class="bg-white rounded-2xl shadow-xl border border-gray-200 overflow-hidden">
                    <!-- Card Header -->
                    <div class="{% if isAdmin %}bg-gradient-to-r from-red-700 to-pink-700{% else %}bg-gradient-to-r from-blue-700 to-indigo-700{% endif %} px-8 py-6">
                        <div class="flex items-center justify-between">
                            <div>
                                <h2 class="text-xl font-bold text-white">User Profile</h2>
                                <p class="text-gray-200 text-sm mt-1">Complete user information</p>
                            </div>
                            <div class="{% if isAdmin %}bg-gradient-to-r from-red-500 to-pink-600{% else %}bg-gradient-to-r from-blue-500 to-indigo-600{% endif %} px-4 py-2 rounded-lg">
                                <span class="text-sm font-semibold text-white">
                                    {% if isAdmin %}Admin Account{% else %}User Account{% endif %}
                                </span>
                            </div>
                        </div>
                    </div>

                    <!-- Card Body -->
                    <div class="p-8">
                        <!-- Information Grid -->
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                            <!-- Personal Info Column -->
                            <div class="space-y-8">
                                <!-- Personal Info Section -->
                                <div>
                                    <h3 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
                                        <svg class="w-5 h-5 mr-2 {% if isAdmin %}text-red-600{% else %}text-blue-600{% endif %}" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                                        </svg>
                                        Personal Information
                                    </h3>
                                    <div class="space-y-4">
                                        <!-- Username -->
                                        <div class="bg-gray-50 rounded-xl p-4 hover:bg-gray-100 transition-colors duration-200">
                                            <div class="flex items-center justify-between mb-1">
                                                <span class="text-xs font-medium text-gray-500 uppercase tracking-wider">Username</span>
                                                <svg class="w-4 h-4 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                                                </svg>
                                            </div>
                                            <p class="text-lg font-semibold text-gray-900">{{ user.username }}</p>
                                        </div>

                                        <!-- Full Name -->
                                        <div class="bg-gray-50 rounded-xl p-4 hover:bg-gray-100 transition-colors duration-200">
                                            <div class="flex items-center justify-between mb-1">
                                                <span class="text-xs font-medium text-gray-500 uppercase tracking-wider">Full Name</span>
                                                <svg class="w-4 h-4 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207"/>
                                                </svg>
                                            </div>
                                            <p class="text-lg font-semibold text-gray-900">{{ user.name }}</p>
                                        </div>

                                        <!-- Age -->
                                        <div class="bg-gray-50 rounded-xl p-4 hover:bg-gray-100 transition-colors duration-200">
                                            <div class="flex items-center justify-between mb-1">
                                                <span class="text-xs font-medium text-gray-500 uppercase tracking-wider">Age</span>
                                                <svg class="w-4 h-4 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                                </svg>
                                            </div>
                                            <div class="flex items-center">
                                                <p class="text-lg font-semibold text-gray-900">{{ user.age }}</p>
                                                <span class="ml-2 text-sm text-gray-500">years old</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Contact Column -->
                            <div class="space-y-8">
                                <!-- Contact Information -->
                                <div>
                                    <h3 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
                                        <svg class="w-5 h-5 mr-2 {% if isAdmin %}text-red-600{% else %}text-blue-600{% endif %}" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                                        </svg>
                                        Contact Information
                                    </h3>
                                    <div class="space-y-4">
                                        <!-- Email -->
                                        <div class="bg-gray-50 rounded-xl p-4 hover:bg-gray-100 transition-colors duration-200">
                                            <div class="flex items-center justify-between mb-1">
                                                <span class="text-xs font-medium text-gray-500 uppercase tracking-wider">Email Address</span>
                                                <svg class="w-4 h-4 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                                                </svg>
                                            </div>
                                            <p class="text-lg font-semibold text-gray-900 break-all">{{ user.email }}</p>
                                        </div>

                                        <!-- Phone -->
                                        <div class="bg-gray-50 rounded-xl p-4 hover:bg-gray-100 transition-colors duration-200">
                                            <div class="flex items-center justify-between mb-1">
                                                <span class="text-xs font-medium text-gray-500 uppercase tracking-wider">Phone Number</span>
                                                <svg class="w-4 h-4 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                                                </svg>
                                            </div>
                                            <p class="text-lg font-semibold text-gray-900">
                                                {% if user.phone|length == 11 %}
                                                    {{ user.phone|slice(0,4) ~ ' ' ~ user.phone|slice(4,3) ~ ' ' ~ user.phone|slice(7,4) }}
                                                {% else %}
                                                    {{ user.phone }}
                                                {% endif %}
                                            </p>
                                        </div>
                                    </div>
                                </div>

                                <!-- Account Info -->
                                <div>
                                    <h3 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
                                        <svg class="w-5 h-5 mr-2 {% if isAdmin %}text-red-600{% else %}text-blue-600{% endif %}" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                                        </svg>
                                        Account Information
                                    </h3>
                                    <div class="space-y-4">
                                        <!-- Created At -->
                                        <div class="bg-gray-50 rounded-xl p-4 hover:bg-gray-100 transition-colors duration-200">
                                            <div class="flex items-center justify-between mb-1">
                                                <span class="text-xs font-medium text-gray-500 uppercase tracking-wider">Member Since</span>
                                                <svg class="w-4 h-4 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                                                </svg>
                                            </div>
                                            <p class="text-lg font-semibold text-gray-900">{{ user.createdAt|date('F j, Y') }}</p>
                                            <p class="text-sm text-gray-500 mt-1">{{ user.createdAt|date('g:i A') }}</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Right Column - Actions -->
            <div class="space-y-8">
                <!-- Quick Actions Card -->
                <div class="bg-white rounded-2xl shadow-xl border border-gray-200 p-6">
                    <h3 class="text-lg font-semibold text-gray-900 mb-6 flex items-center">
                        <svg class="w-5 h-5 mr-2 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
                        </svg>
                        Quick Actions
                    </h3>
                    <div class="space-y-4">
                        <!-- Edit Button -->
                        <a href="{{ path('user_edit', {'id': user.id}) }}" 
                           class="group flex items-center justify-between p-4 bg-gray-50 rounded-xl hover:bg-gray-100 transition-all duration-200 border border-gray-200">
                            <div class="flex items-center">
                                <div class="bg-gray-700 p-2 rounded-lg mr-4">
                                    <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                                    </svg>
                                </div>
                                <div>
                                    <p class="font-semibold text-gray-900">Edit Profile</p>
                                    <p class="text-sm text-gray-500">Update user information</p>
                                </div>
                            </div>
                            <svg class="w-5 h-5 text-gray-500 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                            </svg>
                        </a>

                        <!-- Back to List Button -->
                        <a href="{{ path('user_index') }}" 
                           class="group flex items-center justify-between p-4 bg-gray-50 rounded-xl hover:bg-gray-100 transition-all duration-200 border border-gray-200">
                            <div class="flex items-center">
                                <div class="bg-gray-700 p-2 rounded-lg mr-4">
                                    <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
                                    </svg>
                                </div>
                                <div>
                                    <p class="font-semibold text-gray-900">Back to Users</p>
                                    <p class="text-sm text-gray-500">View all users</p>
                                </div>
                            </div>
                            <svg class="w-5 h-5 text-gray-500 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                            </svg>
                        </a>
                    </div>
                </div>

                <!-- Danger Zone -->
                <div class="bg-gradient-to-br from-red-50 to-rose-50 rounded-2xl shadow-xl border border-red-200 p-6">
                    <h3 class="text-lg font-semibold text-red-900 mb-4 flex items-center">
                        <svg class="w-5 h-5 mr-2 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.998-.833-2.732 0L4.346 16.5c-.77.833.192 2.5 1.732 2.5z"/>
                        </svg>
                        Danger Zone
                    </h3>
                    <p class="text-sm text-red-700 mb-4">
                        Deleting this user will permanently remove all their data. This action cannot be undone.
                    </p>
                    {{ include('user/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Custom Styles -->
<style>
@keyframes slide-down {
    from {
        opacity: 0;
        transform: translateY(-10px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.animate-slide-down {
    animation: slide-down 0.3s ease-out;
}

@keyframes pulse {
    0%, 100% {
        opacity: 1;
    }
    50% {
        opacity: 0.5;
    }
}

.animate-pulse {
    animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
}
</style>
{% endblock %}