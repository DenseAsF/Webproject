{% extends 'adminbase.html.twig' %}

{% block title %}Customers{% endblock %}

{% block body %}
<div class="max-w-7xl mx-auto mt-10 p-6 bg-white shadow-md rounded-lg">
    {% for type, messages in app.session.flashbag.all() %}
        {% for message in messages %}
            <div class="mb-4 p-4 rounded-md helvetica-condensed
                {% if type == 'success' %}bg-green-100 border border-green-400 text-green-700
                {% elseif type == 'error' %}bg-red-100 border border-red-400 text-red-700
                {% else %}bg-blue-100 border border-blue-400 text-blue-700{% endif %}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}
    {% do app.session.flashbag.clear() %}
    <div class="flex justify-between items-center mb-6 helvetica-condensed">
        <h1 class="text-2xl font-bold">Users</h1>
        <a href="{{ path('user_new') }}" class="helvetica-condensed bg-[rgb(29,53,153)] text-white px-4 py-2 rounded-md hover:bg-[rgb(242,182,34)] transition">
            Create Customer
        </a>
    </div>

    {% if is_granted('ROLE_ADMIN') %}
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-2xl font-bold">Customers</h1>
        <a href="{{ path('user_index') }}" 
           class="text-blue-600 hover:text-blue-800 hover:underline">
            ‚Üê Back to All Users
        </a>
    </div>
    {% endif %}

 {# search #}
    <div class="mb-6 p-4 bg-gray-50 rounded-lg">
        <form method="get" action="{{ path('customer_index') }}" class="flex gap-4 items-end">
            <div class="flex-1">
                <label for="search" class="block text-sm font-medium text-gray-700 mb-1">
                    Search Customers
                </label>
                <input type="text" 
                       id="search" 
                       name="search" 
                       value="{{ search }}" 
                       placeholder="Search by name or username..."
                       class="w-full px-3 py-2 border border-gray-300 rounded-md">
            </div>
            
            <div class="flex gap-2">
                <button type="submit" 
                        class="bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700">
                    Search
                </button>
                <a href="{{ path('customer_index') }}" 
                   class="bg-gray-500 text-white px-4 py-2 rounded-md hover:bg-gray-600">
                    Clear
                </a>
            </div>
        </form>
    </div>

{# pila customer #}
    <div class="mb-4">
        <p class="text-gray-600">
            Found {{ customers|length }} customer(s)
        </p>
    </div>

{# table sa customer #}
    <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">ID</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Account No.</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Name</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Email</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Phone</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Actions</th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                {% for customer in customers %}
                    <tr class="hover:bg-gray-50">
                        <td class="px-6 py-4 whitespace-nowrap">{{ customer.id }}</td>
                        <td class="px-6 py-4 whitespace-nowrap font-mono">{{ customer.accountNumber }}</td>
                        <td class="px-6 py-4 whitespace-nowrap">{{ customer.name }}</td>
                        <td class="px-6 py-4 whitespace-nowrap">{{ customer.email }}</td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            {{ customer.phone|slice(0, 4) }}-{{ customer.phone|slice(4, 3) }}-{{ customer.phone|slice(7, 4) }}
                        </td>
{# actions#}
                        <td class="px-6 py-4 whitespace-nowrap space-x-2">
                            <a href="{{ path('user_show', {'id': customer.id}) }}" 
                               class="text-blue-600 hover:text-blue-900 hover:underline">
                                View
                            </a>
                         {% if is_granted('ROLE_ADMIN') %}
                            <a href="{{ path('user_edit', {'id': customer.id}) }}" 
                               class="text-green-600 hover:text-green-900 hover:underline">
                                Edit
                            </a>
                            <form action="{{ path('user_delete', {'id': customer.id}) }}" method="post" class="inline" onsubmit="return confirm('Are you sure you want to delete this customer?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ customer.id) }}">
                                <button type="submit" class="text-red-600 hover:text-red-900 hover:underline">Delete</button>
                            </form>
                             {% endif %}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6" class="px-6 py-4 text-center text-gray-500">
                            No customers found.
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}