{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}

<div class="flex justify-center items-center min-h-screen bg-gray-100">
    <div class="w-xl max-w-xl bg-white rounded-xl shadow-lg p-6">
        <h2 class="text-xl font-bold mb-5 text-center">Create Account</h2>

        {{ form_start(registrationForm, {
            'attr': {
                'data-turbo': 'false',
                'novalidate': 'novalidate'
            }
        }) }}
        
        <div class="mb-3">
            {{ form_label(registrationForm.username, 'Username', {'label_attr': {'class': 'block text-gray-600 text-sm mb-1'}}) }}
            {{ form_widget(registrationForm.username, {'attr': {
                'class': 'w-full border rounded px-3 py-2 text-sm',
                'required': 'required',
                'autofocus': 'autofocus'
            }}) }}
            {{ form_errors(registrationForm.username) }}
        </div>

        <div class="mb-3">
            {{ form_label(registrationForm.name, 'Full Name', {'label_attr': {'class': 'block text-gray-600 text-sm mb-1'}}) }}
            {{ form_widget(registrationForm.name, {'attr': {
                'class': 'w-full border rounded px-3 py-2 text-sm',
                'required': 'required'
            }}) }}
            {{ form_errors(registrationForm.name) }}
        </div>

        <div class="mb-3">
            {{ form_label(registrationForm.email, 'Email', {'label_attr': {'class': 'block text-gray-600 text-sm mb-1'}}) }}
            {{ form_widget(registrationForm.email, {'attr': {
                'class': 'w-full border rounded px-3 py-2 text-sm',
                'required': 'required'
            }}) }}
            {{ form_errors(registrationForm.email) }}
        </div>

        <div class="mb-3">
            {{ form_label(registrationForm.phone, 'Phone Number', {'label_attr': {'class': 'block text-gray-600 text-sm mb-1'}}) }}
            {{ form_widget(registrationForm.phone, {'attr': {
                'class': 'w-full border rounded px-3 py-2 text-sm',
                'required': 'required'
            }}) }}
            {{ form_errors(registrationForm.phone) }}
        </div>

        <div class="mb-3">
            {{ form_label(registrationForm.age, 'Age', {'label_attr': {'class': 'block text-gray-600 text-sm mb-1'}}) }}
            {{ form_widget(registrationForm.age, {'attr': {
                'class': 'w-full border rounded px-3 py-2 text-sm',
                'required': 'required'
            }}) }}
            {{ form_errors(registrationForm.age) }}
        </div>

        <div class="mb-3">
            {{ form_label(registrationForm.plainPassword, 'Password', {'label_attr': {'class': 'block text-gray-600 text-sm mb-1'}}) }}
            {{ form_widget(registrationForm.plainPassword, {'attr': {
                'class': 'w-full border rounded px-3 py-2 text-sm',
                'required': 'required'
            }}) }}
            {{ form_errors(registrationForm.plainPassword) }}
        </div>

        <button
            type="submit"
            class="w-full bg-blue-600 hover:bg-blue-700 text-white py-2 rounded text-sm font-medium"
        >
            Register
        </button>
        
        {{ form_end(registrationForm) }}
        
        <div class="mt-4 text-center text-sm">
            <p>Already have an account? <a href="{{ path('login') }}" class="text-blue-600 hover:underline">Sign In</a></p>
        </div>
    </div>
</div>

<style>
    .form-error {
        color: #dc3545 !important;
        font-size: 0.875rem;
        margin-top: 0.25rem;
        display: block;
        font-weight: 500;
    }
    
    .invalid-feedback {
        color: #dc3545 !important;
        font-size: 0.875rem;
        margin-top: 0.25rem;
        display: block;
        font-weight: 500;
    }
    
    .is-invalid {
        border-color: #dc3545 !important;
        background-color: #fff5f5 !important;
    }
    
    input.is-invalid:focus {
        border-color: #dc3545 !important;
        box-shadow: 0 0 0 0.2rem rgba(220, 53, 69, 0.25) !important;
    }
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Add error styling to form fields
    const formErrors = document.querySelectorAll('.form-error');
    formErrors.forEach(function(error) {
        error.classList.add('invalid-feedback');
        // Find the input field (previous element sibling)
        const field = error.previousElementSibling;
        if (field && (field.tagName === 'INPUT' || field.tagName === 'SELECT' || field.tagName === 'TEXTAREA')) {
            field.classList.add('is-invalid');
        }
    });
});
</script>

{% endblock %}
