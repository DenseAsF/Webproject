{% extends 'base.html.twig' %}

{% block title %}Home - Hotel Diongco{% endblock %}

{% block body %}

{# hero section #}
  <section class="relative h-[650px] overflow-hidden">
   <div id="hero-carousel" class="absolute inset-0 w-full h-full">
<div class="carousel-slide absolute inset-0 bg-cover bg-center opacity-100 transition-opacity duration-1000"
     style="background-image: linear-gradient(rgba(0, 20, 77, 0.6), rgba(0,1,34,0.6)), url('{{ asset('images/hotelpatterned.png') }}');">
</div>
<div class="carousel-slide absolute inset-0 bg-cover bg-center opacity-0 transition-opacity duration-1000"
     style="background-image: linear-gradient(rgba(0, 20, 77, 0.6), rgba(0,1,34,0.6)), url('{{ asset('images/hotelroom.png') }}');">
</div>
<div class="carousel-slide absolute inset-0 bg-cover bg-center opacity-0 transition-opacity duration-1000"
     style="background-image: linear-gradient(rgba(0, 20, 77, 0.6), rgba(0,1,34,0.6)), url('{{ asset('images/diningroom.png') }}');">
</div>
<div class="carousel-slide absolute inset-0 bg-cover bg-center opacity-0 transition-opacity duration-1000"
     style="background-image: linear-gradient(rgba(0, 20, 77, 0.6), rgba(0,1,34,0.6)), url('{{ asset('images/hotelspa.png') }}');">
</div> </div>
    </div>

    <div class="relative z-10 flex flex-col items-center justify-center h-full text-center px-6 mb-40">
      <h1 id="hero-title" style="font-family:'Cinzel', serif;" class="font-thin text-6xl text-white opacity-0 transition-opacity duration-1000"></h1>
      <h2 id="hero-subtitle" class="helvetica-57 text-2xl text-white mt-4 opacity-0 transition-opacity duration-1000"></h2>
      <a id="hero-button" href="#" class="mt-6 bg-[rgb(29,53,153)] hover:bg-[rgb(242,182,34)] transition-colors text-white px-6 py-3 rounded-lg opacity-0 transition-opacity duration-1000">
        Book Now
      </a>
    </div>
  </section>

 {# about #}
  <section id="about" class="mt-20 container mx-auto px-6 flex flex-col md:flex-row items-center gap-8">
    <div class="md:w-1/2 text-left mb-40">
      <h1 style="font-family:'Cinzel', serif;" class="font-thin text-4xl">
        Experience the perfect balance of luxury and warmth.
      </h1>
      <h2 style="letter-spacing: 0.05em" class="helvetica-condensed text-1xl mt-5 text-[rgb(67,85,145)]">
        Experience the perfect balance of luxury and warmth at Hotel Diongco. From elegant accommodations to world-class amenities, 
        every detail is designed for your comfort. Whether you're here for business, leisure, or a special occasion, 
        enjoy exceptional service, refined hospitality, and unforgettable moments in the heart of Dumaguete City.
      </h2>
      <a href="{{ path('about') }}" class="relative bg-[rgb(29,53,153)] top-10 hover:bg-[rgb(242,182,34)] transition-colors text-white px-4 py-2 rounded-lg">Learn More</a>
    </div>
    <div class="md:w-1/2">
      <img src="{{ asset('images/hotel.png') }}" alt="Hotel View" class="w-full h-auto rounded-lg shadow-lg">
    </div>
  </section>

  {# rooms preview #}
  <section id="rooms" class="mt-10 py-16 bg-gray mt-12">
    <div class="container mx-auto px-6">
      <h2 class="text-3xl font-bold mb-10 font-thin text-4xl" style="font-family:'Cinzel', serif;">Our Rooms</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="bg-white rounded-xl shadow-lg overflow-hidden">
          <img src="{{ asset('images/hotelroom.png') }}" alt="Deluxe Room" class="w-full h-48 object-cover">
          <div class="p-6">
            <h3 class="helvetica-condensed text-xl font-semibold">Deluxe Room</h3>
            <p class="helvetica-condensed text-[rgb(67,85,145)] text-sm mt-2">Spacious and comfortable, perfect for relaxation.</p>
          </div>
        </div>
        <div class="bg-white rounded-xl shadow-lg overflow-hidden">
          <img src="{{ asset('images/hotelroom.png') }}" alt="Suite Room" class="w-full h-48 object-cover">
          <div class="p-6">
            <h3 class="helvetica-condensed text-xl font-semibold">Suite Room</h3>
            <p class="helvetica-condensed text-[rgb(67,85,145)] text-sm mt-2">Luxury suite with a private balcony and city view.</p>
          </div>
        </div>
        <div class="bg-white rounded-xl shadow-lg overflow-hidden">
          <img src="{{ asset('images/hotelroom.png') }}" alt="Standard Room" class="w-full h-48 object-cover">
          <div class="p-6">
            <h3 class="helvetica-condensed text-xl font-semibold">Standard Room</h3>
            <p class="helvetica-condensed text-[rgb(67,85,145)] text-sm mt-2">Cozy and affordable, ideal for short stays.</p>
          </div>
        </div>
      </div>
      <div class="text-center mt-10">
        <a href="#" class="inline-block px-6 py-3 bg-[rgb(29,53,153)] text-white rounded-lg hover:bg-[rgb(242,182,34)] transition-colors">
          View All Rooms
        </a>
      </div>
    </div>
  </section>

{# amenities preview #}
<section id="amenities" class="mt-10 py-16 bg-gray-50">
  <div class="container mx-auto px-6">
    <h2 class="text-3xl font-bold mb-10 font-thin text-4xl" style="font-family:'Cinzel', serif;">
      Amenities & Services
    </h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      
      {# Spa #}
      <div class="bg-white rounded-xl shadow-lg overflow-hidden">
        <img src="{{ asset('images/hotelspa.png') }}" alt="Luxury Spa" class="w-full h-48 object-cover">
        <div class="p-6">
          <h3 class="helvetica-condensed text-xl font-semibold">Spa</h3>
          <p class="helvetica-condensed text-[rgb(67,85,145)] text-sm mt-2">
            Relax and rejuvenate with our luxury spa treatments.
          </p>
        </div>
      </div>

      {# Restaurant #}
      <div class="bg-white rounded-xl shadow-lg overflow-hidden">
        <img src="{{ asset('images/hotelspa.png') }}" alt="Fine Dining" class="w-full h-48 object-cover">
        <div class="p-6">
          <h3 class="helvetica-condensed text-xl font-semibold">Restaurant</h3>
          <p class="helvetica-condensed text-[rgb(67,85,145)] text-sm mt-2">
            Enjoy world-class cuisine prepared by our top chefs.
          </p>
        </div>
      </div>

      {# Gym #}
      <div class="bg-white rounded-xl shadow-lg overflow-hidden">
        <img src="{{ asset('images/hotelspa.png') }}" alt="Modern Gym" class="w-full h-48 object-cover">
        <div class="p-6">
          <h3 class="helvetica-condensed text-xl font-semibold">Gym</h3>
          <p class="helvetica-condensed text-[rgb(67,85,145)] text-sm mt-2">
            Stay fit with modern equipment and spacious workout areas.
          </p>
        </div>
      </div>

      {# Pool #}
      <div class="bg-white rounded-xl shadow-lg overflow-hidden">
        <img src="{{ asset('images/hotelspa.png') }}" alt="Infinity Pool" class="w-full h-48 object-cover">
        <div class="p-6">
          <h3 class="helvetica-condensed text-xl font-semibold">Pool</h3>
          <p class="helvetica-condensed text-[rgb(67,85,145)] text-sm mt-2">
            Take a refreshing swim in our outdoor infinity pool.
          </p>
        </div>
      </div>

      {# Bar #}
      <div class="bg-white rounded-xl shadow-lg overflow-hidden">
        <img src="{{ asset('images/hotelspa.png') }}" alt="Lounge Bar" class="w-full h-48 object-cover">
        <div class="p-6">
          <h3 class="helvetica-condensed text-xl font-semibold">Bar</h3>
          <p class="helvetica-condensed text-[rgb(67,85,145)] text-sm mt-2">
            Unwind with cocktails and music at our stylish lounge bar.
          </p>
        </div>
      </div>

    </div>
  </div>
  <div class="text-center mt-10">
  <a href="#services" class="inline-block px-6 py-3 bg-[rgb(29,53,153)] text-white rounded-lg hover:bg-[rgb(242,182,34)] transition-colors">
     Inquire About Services
  </a>
</div>
</section>



  {# rewards #}
  <section id="rewards" class="bg-gray-50 py-20 mt-8">
  <div class="container mx-auto px-6 grid md:grid-cols-2 gap-12 items-center">
    
 
    <div>
      <h2 style="font-family:'Cinzel', serif;" class="text-4xl font-thin  mb-6">
        Join Our Rewards Program
      </h2>
      <p class="helvetica-condensed text-lg text-[rgb(67,85,145)] mb-6">
        Earn points every time you book a room or enjoy our amenities.  
        Accumulate points and redeem them for exclusive discounts and special offers.  
        Your loyalty deserves to be rewarded!
      </p>

      <ul class="space-y-4 text-[rgb(67,85,145)] helvetica-condensed">
        <li>✔ Book & Earn Points</li>
        <li>✔ Collect Rewards with Every Stay</li>
        <li>✔ Redeem Discounts & Exclusive Perks</li>
      </ul>

      <a href="#rooms" class="inline-block mt-8 bg-[rgb(29,53,153)] hover:bg-[rgb(242,182,34)] 
        transition-colors text-white px-6 py-3 rounded-lg shadow-lg">
        Start Earning Rewards
      </a>
    </div>

 
    <div class="flex justify-center">
      <img src="{{ asset('images/hotelrewards.png') }}" 
           alt="Hotel Rewards" 
           class="rounded-2xl shadow-xl w-full md:w-4/5 lg:w-3/4">
    </div>

  </div>
</section>

{# Call to Action Section #}
<section id="cta" class="py-16 bg-[rgb(29,53,153)] text-white mt-40">
  <div class="container mx-auto px-6 text-center">
    <h2 style="font-family:'Cinzel', serif;" class="text-3xl font-thin mb-4">
      Ready to Experience Hotel Diongco?
    </h2>
    <p class="helvetica-condensed text-lg mb-8">
      Book your stay today and start enjoying our luxury rooms, amenities, and rewards system.
    </p>
    <a href="{{ path('homepage') }}" 
       class="inline-block px-8 py-3 bg-[rgb(242,182,34)] text-white rounded-lg font-semibold hover:bg-yellow-400 transition-colors">
      Book Now
    </a>
  </div>
</section>

{% endblock %}
