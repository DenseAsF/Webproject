{% extends 'adminbase.html.twig' %}

{% block title %}Activity Log Details{% endblock %}

{% block body %}
<div class="max-w-4xl mx-auto mt-10 p-6 bg-white shadow-md rounded-lg helvetica-condensed">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-2xl font-bold">Activity Log Details</h1>
        <a href="{{ path('activity_log_index') }}" class="text-sm text-blue-600 hover:underline">‚Üê Back to Activity Logs</a>
    </div>

    <div class="border border-gray-200 rounded-lg overflow-hidden bg-white">
        <div class="px-6 py-4 border-b border-gray-200 bg-gray-50 flex items-center justify-between">
            <div>
                <h2 class="text-lg font-semibold text-gray-900">Log #{{ log.id }}</h2>
                <p class="mt-1 text-sm text-gray-500">Recorded on {{ log.createdAt|date('Y-m-d H:i:s') }}</p>
            </div>
        </div>

        <div class="px-6 py-6 grid grid-cols-1 md:grid-cols-2 gap-6 text-sm">
            <div>
                <div class="text-gray-500 font-medium">Username</div>
                <div class="mt-1 text-gray-900">{{ log.username ?? 'N/A' }}</div>
            </div>

            <div>
                <div class="text-gray-500 font-medium">Role</div>
                <div class="mt-1 text-gray-900">{{ log.role ?? '-' }}</div>
            </div>

            <div>
                <div class="text-gray-500 font-medium">Action</div>
                <div class="mt-1 text-gray-900">{{ log.action }}</div>
            </div>

            <div>
                <div class="text-gray-500 font-medium">Affected Entity</div>
                <div class="mt-1 text-gray-900">
                    {% if log.entityType %}
                        {{ log.entityType }}{% if log.entityId %} #{{ log.entityId }}{% endif %}
                    {% else %}
                        -
                    {% endif %}
                </div>
            </div>

            <div class="md:col-span-2">
                <div class="text-gray-500 font-medium">Details</div>
                <div class="mt-1 text-gray-900 whitespace-pre-wrap bg-gray-50 rounded-md p-3 min-h-[60px]">{{ log.description|default('-') }}</div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
